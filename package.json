    "db:studio": "prisma studio"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^24.3.0",
    "prisma": "^5.13.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.0.2",
    "@elysiajs/swagger": "^1.0.5",
    "@prisma/client": "^5.13.0",
    "elysia": "^1.3.20"
  }
}